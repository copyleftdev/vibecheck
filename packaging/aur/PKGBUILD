pkgname=vibecheck-bin
pkgver=1.0.0
pkgrel=1
pkgdesc="High-performance Zig tool to scan code for unfinished vibes"
arch=('x86_64')
url="https://github.com/copyleftdev/vibecheck"
license=('MIT')
provides=('vibecheck')
conflicts=('vibecheck')
source_x86_64=("https://github.com/copyleftdev/vibecheck/releases/download/v${pkgver}/vibecheck-x86_64-linux.tar.gz")
sha256sums_x86_64=('3055578fd0c90abfa1c2586c01b17c11a682c19078612cc8b3f26421c1564af3')

package() {
	cd "$srcdir"
	install -Dm755 vibecheck "$pkgdir/usr/bin/vibecheck"
    install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
